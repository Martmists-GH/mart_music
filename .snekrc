[all]
# Todo: pytest when tests are needed, pyroma and pypi when setup.py is made
linters = flake8, pylint, yapf, isort, vulture

[flake8]
max-line-length=100
exclude=build,tests

[isort]
line_length=100
indent='    '
multi_line_output=0
length_sort=1
use_parentheses=true
sections=FUTURE,STDLIB,THIRDPARTY,FIRSTPARTY,LOCALFOLDER
import_heading_stdlib=Stdlib
import_heading_thirdparty=External Libraries
import_heading_firstparty=Library internal code
force_sort_within_sections=true

[vulture]
min-confidence=0

[pypi]  # needed for twine

[style]  # needed for yapf, made an issue to their repo to allow [yapf] in non-`setup.cfg` files

[pytest]
testpaths=tests
